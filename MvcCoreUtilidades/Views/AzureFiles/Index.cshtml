@model List<string>


<h1 style="color:blue">Azure Storage FIles</h1>

<a asp-controller ="AzureFiles"
   asp-action="UploadFiles">
Subir Ficheros </a>
<ul class="list-group">
    @foreach (string file in Model)
    {
        <li class="list-group-item">
            @file
            <a asp-controller="AzureFiles"
            asp-action="Index"
            asp-route-fileName="@file" class="btn btn-info">
            Leer
            </a>
            <a asp-controller="AzureFiles"
           asp-action="DeleteFile"
           asp-route-fileName="@file" class="btn btn-outline-danger">
                Borrar
            </a>
        </li>
    }
</ul>
<hr/>
<p style="color:red">
    @ViewData["DATA"]
</p>